---
import Card from '../ui/Card.astro';

const { story } = Astro.props as {
  story: import('astro:content').CollectionEntry<'stories'>;
};
---

<Card href={`/stories/${story.slug}`}>
  <div class="flex flex-col gap-2">
    <h3 class="font-semibold text-sparks-ink">{story.data.title}</h3>
    <p class="text-sm text-sparks-ink/80 line-clamp-3">
      {story.data.summary}
    </p>
    {
      story.data.author && (
        <p class="text-[0.7rem] text-sparks-ink/60 mt-1">By {story.data.author}</p>
      )
    }
  </div>
</Card>

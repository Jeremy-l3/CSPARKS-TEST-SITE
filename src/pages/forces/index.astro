---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ForceCard from '../../components/forces/ForceCard.astro';
import { getCollection } from 'astro:content';

const forces = await getCollection('forces');
---

<BaseLayout title="Forces Â· Collaborative Sparks">
  <section class="space-y-6">
    <header class="space-y-2">
      <h1 class="text-2xl font-semibold">Forces</h1>
      <p class="text-sm text-sparks-ink/80 max-w-2xl">
        Forces describe the underlying dynamics, tensions, and attractors in the landscape of
        collaboration. Patterns respond to these forces; stories reveal how they show up in
        practice.
      </p>
    </header>

    <div class="grid gap-4 md:grid-cols-3">
      {forces.map((f) => <ForceCard force={f} />)}
    </div>
  </section>
</BaseLayout>
